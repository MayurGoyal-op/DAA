#include <stdio.h>

int kadane(int arr[], int n)
{
    int maxSum = arr[0];
    int currSum = arr[0];

    for(int i = 1; i < n; i++)
    {
        if(currSum < 0)
            currSum = arr[i];
        else
            currSum += arr[i];

        if(currSum > maxSum)
            maxSum = currSum;
    }

    return maxSum;
}

int main()
{
    int arr[] = {-2,-5,6,-2,-3,1,5,-6};
    int n = sizeof(arr)/sizeof(arr[0]);

    printf("Maximum Subarray Sum = %d", kadane(arr, n));

    return 0;
}
